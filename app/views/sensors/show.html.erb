<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @sensor.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @sensor.location %>
</p>

<%= link_to 'Edit', edit_sensor_path(@sensor) %> |
<%= link_to 'Back', sensors_path %>

<% if @measurements %>
<table class="table table-striped">
	<tr>
		<th>Value</th>
		<th>Created at</th>
	</tr>
	<% @measurements.each do |m|%>
	<tr>
		<td><%= m.value %></td>
		<td><%= m.created_at %></td>
	</tr>
	<%end%>
</table>
<%= bar_chart @measurements.group(:created_at).count %>
<%= line_chart @measurements.group_by_day(:created_at).count %>
<%end%>

